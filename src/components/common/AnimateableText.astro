
<div class="flex flex-row gap-1 relative mt-1 mx-auto md:mx-0 w-full justify-center md:justify-start">
    <p class="text-2xl">I'm a</p>
    <!-- <div class="absolute inset-0 z-0 bg-red-500 border-l-2 border-primary border-solid animate-textAnimation box-border h-full w-full"></div> -->
    <p class="text-2xl text-primary relative" id="animateableText"></p>
</div>

<script is:inline>
    start();

    
    function start()
    {
        let animateableText = document.querySelector("#animateableText");
        let delay = 5000; //ms
        let texts = [
            "fullstack developer",
            "devOps engineer",
            "dark mode enthusiast",
        ]

        animateText(animateableText, delay, texts);
        setInterval(animateText, delay * texts.length);
    }    
    
    function animateText(animateableText, delay, texts) {

        if(animateableText == null)
            return;

        for(let i = 0; i < texts.length; i++)
        {
            setTimeout(() => {
                animateableText.innerHTML = texts[i];
            }, delay * i + 300);
        }
    };



</script>

<style>
    #animateableText::before {
  content: "";
  position: absolute;
  display: inline-block;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: #1f2022;
  border-left: 2px solid #4070f4;
  animation: textAnimation 5s steps(24) infinite;
  animation-delay: 300ms;
}

@keyframes textAnimation{
40%,60% {
    left:100%;
    
}
100% {
    left:0%
}
}

</style>